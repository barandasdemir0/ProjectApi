@model List< HotelProject.EntityLayer.Concrete.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Role Tablosu</h4>

            <div class="table-responsive">
                <table class="table text-center align-middle">
                    <thead>
                        <tr>
                            <th class="col-1">#</th>
                            <th class="col-1">Kullanıcı</th>
                            <th class="col-3">Rol Ata</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(++count)</td>
                                <td>@item.Name</td>

                                <td> <a href="/RoleAssign/RoleAssignInsert/@item.Id" class="btn btn-outline-primary  btn-lg btn-rounded btn-fw">Yeni Rol Ata</a></td>
                              
                            </tr>
                        }
                    </tbody>
                </table>

               
            </div>
        </div>
    </div>
</div>




