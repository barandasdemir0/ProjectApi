@model List<HotelProject.WebUI.Models.Role.RoleAssignViewModel>
@{
    ViewData["Title"] = "RoleAssignInsert";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>RoleAssignInsert</h1>

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
        {
            <div class="form-check">
                <input type="hidden" asp-for="@Model[i].RoleId"/>
                <input type="hidden" asp-for="@Model[i].RoleName"/>
                <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input"/>
            <label asp-for="@Model[i].RoleExist" class="form-check-label">@Model[i].RoleName</label>
            </div>
        }
    <button class=" btn btn-outline-primary btn-lg btn-rounded btn-fw">Roller Güncelle</button>
</form>

