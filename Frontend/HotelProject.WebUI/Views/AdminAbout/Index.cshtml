@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Çalışan Tablosu</h4>

            <div class="table-responsive">
                <table class="table text-center align-middle">
                    <thead>
                        <tr>
                            <th class="col-1">#</th>
                            <th class="col-3">Başlık 1</th>
                            <th class="col-3">Başlık 2</th>
                            <th class="col-2">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(++count)</td>
                                <td>@item.AboutTitle1</td>
                                <td>@item.AboutTitle2</td>
                                <td><a href="/AdminAbout/AboutUpdate/@item.AboutID" class="btn btn-outline-warning btn-lg btn-rounded btn-fw">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>

                <br />
            </div>
        </div>
    </div>
</div>

