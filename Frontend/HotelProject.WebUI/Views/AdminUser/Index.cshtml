@model List<HotelProject.WebUI.Dtos.AppUserDto.ResultAppUserListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kullanıcı Listesi </h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> Resim </th>
                            <th> # </th>
                            <th> Ad Soyad </th>
                            <th> Şehir </th>
                            <th> Durum </th>
                           @*  <th> Sil </th>
                            <th> Güncelle </th> *@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="@item.ImageUrl" alt="image" />
                                </td>
                                <td> @(++count) </td>
                                <td> @item.Name @item.SurName </td>
                                <td> @item.City </td>
                                <td> Aktif </td>
@*                                 <td><a href="/AdminUser/AdminUserDelete/@item.ıd" class="btn btn-outline-danger btn-lg btn-rounded btn-fw">Sil</a></td>
                                <td><a href="/AdminUser/AdminUserUpdate/@item.ıd" class="btn btn-outline-warning btn-lg btn-rounded btn-fw">Güncelle</a></td>
 *@
                            </tr>
                        }
                     
                      
                    </tbody>
                </table>
                <br />
                <a href="/Register/Index/" class="btn btn-outline-primary  btn-lg btn-rounded btn-fw">Yeni Personel Ekle</a>
            </div>
        </div>
    </div>
</div>


                           