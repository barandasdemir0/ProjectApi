@model CreateSendMessageDto
@{
    ViewData["Title"] = "NewMessage";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mb-4">Yeni Mesaj Gönder</h4>
            <form class="forms-sample" method="post">

                <div class="form-group">
                    <label for="exampleInputasp-for1">Alıcı İsim Soyisim</label>
@*                     @Html.TextBoxFor(x => x.Receiverasp-for, new { @class = "form-control" }) *@
                    <input type="text" class="form-control" asp-for="ReceiverName" />

                </div>
                <div class="form-group">
                    <label for="exampleInputasp-for1">Alıcı Mail</label>
                    @* @Html.TextBoxFor(x => x.ReceiverMail, new { @class = "form-control" }) *@
                    <input type="text" class="form-control" asp-for="ReceiverMail" />
                </div>

                <div class="form-group mb-3">
                    <label for="exampleInputasp-for1">Konu</label>
          @*           @Html.TextBoxFor(x => x.Title, new { @class = "form-control" }) *@
                    <input type="text" class="form-control" asp-for="Title" />
                </div>
                <div class="form-group mb-3">
                    <label for="exampleInputasp-for1">Açıklama / Mesaj</label>
             @*        @Html.TextAreaFor(x => x.MessageContent,10,3, new { @class = "form-control" }) *@
                    <textarea asp-for="MessageContent" class="form-control" rows="10" cols="3"></textarea>

                </div>
               

                <button type="submit" class="btn btn-outline-primary btn-lg btn-rounded btn-fw me-2">Mesaj Gönder</button>
                <a href="/AdminContact/MessageOutboxDetails/" class="btn btn-outline-info btn-lg btn-rounded btn-fw">Geri Dön</a>
            </form>
        </div>
    </div>
</div>


