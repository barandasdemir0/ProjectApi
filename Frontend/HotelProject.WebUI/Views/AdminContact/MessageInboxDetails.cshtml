@model ResultContactDto
@{
    ViewData["Title"] = "MessageInboxDetails";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> Mesajlar Detayları</h4>




            @Html.HiddenFor(x => x.ContactID)
            <div class="form-group">
                <label for="exampleInputName1">İsim Soyisim</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="exampleInputName1">Ünvan</label>
                @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
            </div>

            <div class="form-group mb-3">
                <label for="exampleInputName1">Konu</label>
                @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
            </div>
            <div class="form-group mb-3">
                <label for="exampleInputName1">Açıklama / Mesaj</label>
                @Html.TextAreaFor(x => x.MessageContent, new { @class = "form-control" })
            </div>
            <div class="form-group mb-3">
                <label for="exampleInputName1">Tarihi</label>
@*                 @Html.TextBoxFor(x => x.Date, new { @class = "form-control" }) *@
                <input value="@Model.Date.ToShortDateString()" class="form-control" />
            </div>




        </div>
    </div>
</div>



