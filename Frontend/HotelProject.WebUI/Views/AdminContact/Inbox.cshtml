@model List< ResultContactDto>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesajlar Tablosu</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> Mail / Gönderen </th>
                            <th> Tarih </th>
                            <th> Mesajı Gör </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @{
                                        count++;
                                    }
                                    @count
                                </td>
                                <td> @item.Mail  / @item.Name </td>



                                <td> @item.Date.ToShortDateString() </td>


                                <td> <a href="/AdminContact/MessageInboxDetails/@item.ContactID" class="btn btn-outline-primary">Mesaj Detayları</a>  </td>

                            </tr>
                        }


                    </tbody>

                </table>
                <br />

            </div>
        </div>
    </div>
</div>

