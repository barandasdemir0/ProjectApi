@model List<ResultSendMessageDto>
@{
    ViewData["Title"] = "Outbox";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}





<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesajlar Tablosu</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> Gönderilen Mail / Gönderilen Müşteri </th>
                            <th> Gönderen Mail / Gönderen Müşteri </th>
                            <th> Konu </th>
                            <th> Tarih </th>
                            <th> Mesajı Gör </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @{
                                        count++;
                                    }
                                    @count
                                </td>
                                <td> @item.ReceiverMail  / @item.ReceiverName </td>
                                <td> @item.SenderMail  / @item.SenderName </td>
                                <td> @item.Title </td>
                                <td> @item.Date.ToShortDateString() </td>
                                <td> <a href="/AdminContact/MessageOutboxDetails/@item.SendMessageID" class="btn btn-outline-primary">Mesaj Detayları</a>  </td>

                            </tr>
                        }


                    </tbody>

                </table>
                <br />

            </div>
        </div>
    </div>
</div>



