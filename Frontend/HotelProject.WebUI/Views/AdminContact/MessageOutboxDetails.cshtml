@model ResultSendMessageDto
@{
    ViewData["Title"] = "MessageOutboxDetails";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    // Layout = null;
}



<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> Mesajlar Detayları</h4>




            @Html.HiddenFor(x => x.SendMessageID)
            <div class="form-group">
                <label for="exampleInputName1">Alıcı İsim Soyisim</label>
                @Html.TextBoxFor(x => x.ReceiverName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="exampleInputName1">Alıcı Mail</label>
                @Html.TextBoxFor(x => x.ReceiverMail, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="exampleInputName1">Gönderen İsim Soyisim</label>
                @Html.TextBoxFor(x => x.SenderName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="exampleInputName1">Gönderen Mail</label>
                @Html.TextBoxFor(x => x.SenderMail, new { @class = "form-control" })
            </div>
    
            <div class="form-group mb-3">
                <label for="exampleInputName1">Konu</label>
                @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
            </div>
            <div class="form-group mb-3">
                <label for="exampleInputName1">Açıklama / Mesaj</label>
                @Html.TextAreaFor(x => x.MessageContent,10,3, new { @class = "form-control" })
            </div>
            <div class="form-group mb-3">
                <label for="exampleInputName1">Tarihi</label>
                @*                 @Html.TextBoxFor(x => x.Date, new { @class = "form-control" }) *@
                <input value="@Model.Date.ToShortDateString()" class="form-control" />
            </div>




        </div>
    </div>
</div>





