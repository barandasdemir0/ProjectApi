@model List<HotelProject.WebUI.Dtos.StaffDto.ResultLast4StaffDto> 
@{
    int count = 0;
}

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Görevliler</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                               
                                <th> # </th>
                                <th> resim </th>
                                <th> isim </th>
                                <th> Görev </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @(++count) </td>
                                    <td>
                                        <img src="@item.StaffSocialMedia1" alt="image" />
                                        <span class="pl-2">@item.StaffName</span>
                                    </td>
                                    <td> @item.StaffName </td>
                                    <td> @item.StaffTitle </td>
    @*                                 <td>
                                        <div class="badge badge-outline-success">Approved</div>
                                    </td> *@
                                </tr>
                                
                            }
                          

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>