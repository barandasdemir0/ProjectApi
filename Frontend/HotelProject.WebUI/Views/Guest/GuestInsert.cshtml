@model CreateGuestDto
@{
    ViewData["Title"] = "GuestInsert";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mb-4">Yeni Misafir Ekle</h4>
            <form class="forms-sample" method="post">

                <div class="form-group mb-3">
                    <label>Adınız</label>
                    <input type="text" class="form-control" name="Name" placeholder="Adınız">
                </div>
                <div class="form-group mb-3">
                    <label>SoyAdınız</label>
                    <input type="text" class="form-control" name="Surname" placeholder="SoyAdınız">
                </div>
                <div class="form-group mb-3">
                    <label>Şehir</label>
                    <input type="text" class="form-control" name="City" placeholder="Şehir">
                </div>
                <div class="form-group mb-3">
                    <label>Telefon</label>
                    <input type="text" class="form-control" name="Telephone" placeholder="Telefon">
                </div>
                <div class="form-group mb-3">
                    <label>TC Kimlik Numarası</label>
                    <input type="text" class="form-control" name="IdentityNumber" placeholder="TC Kimlik Numarası">
                </div>
                <div class="form-group mb-3">
                    <label>Mail</label>
                    <input type="text" class="form-control" name="Mail" placeholder="Mail">
                </div>

            





                <button type="submit" class="btn btn-outline-primary btn-lg btn-rounded btn-fw me-2">Misafir Ekle</button>
                <a href="/Guest/Index/" class="btn btn-outline-info btn-lg btn-rounded btn-fw">Geri Dön</a>
            </form>
        </div>
    </div>
</div>



