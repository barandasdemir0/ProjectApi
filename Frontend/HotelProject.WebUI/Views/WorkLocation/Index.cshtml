@model List<ResultWorkLocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}




<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Otel Lokasyonları Tablosu</h4>

            <div class="table-responsive">
                <table class="table text-center align-middle">
                    <thead>
                        <tr>
                            <th class="col-1">#</th>
                            <th class="col-3">Otel Adı</th>
                            <th class="col-3">Otel Şehri</th>
                            <th class="col-2">Sil</th>
                            <th class="col-2">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(++count)</td>
                                <td>@item.WorkLocationName</td>
                                <td>@item.WorkLocationCity</td>
                                <td><a href="/WorkLocation/WorkLocationDelete/@item.WorkLocationID" class="btn btn-outline-danger btn-lg btn-rounded btn-fw">Sil</a></td>
                                <td><a href="/WorkLocation/WorkLocationUpdate/@item.WorkLocationID" class="btn btn-outline-warning btn-lg btn-rounded btn-fw">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>

                <br />
                <a href="/WorkLocation/WorkLocationInsert/" class="btn btn-outline-primary  btn-lg btn-rounded btn-fw">Yeni Lokasyon Ekle</a>
            </div>
        </div>
    </div>
</div>


