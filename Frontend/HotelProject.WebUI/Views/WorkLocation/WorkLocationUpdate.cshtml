@model UpdateWorkLocationDto
@{
    ViewData["Title"] = "WorkLocationUpdate";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> Otel Güncelle</h4>

            @using (Html.BeginForm("StaffUpdate", "Staff", FormMethod.Post))
            {
                
           
            @Html.HiddenFor(x => x.WorkLocationID)
            <div class="form-group">
                <label for="exampleInputName1">Otel Adı</label>
                @Html.TextBoxFor(x => x.WorkLocationName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="exampleInputName1">Şehir</label>
                @Html.TextBoxFor(x => x.WorkLocationCity, new { @class = "form-control" })
            </div>

         


          
          
            <button type="submit" class="btn btn-outline-primary btn-lg btn-rounded btn-fw me-2">Şehir Güncelle</button>
            <a href="/WorkLocation/Index/" class="btn btn-outline-info btn-lg btn-rounded btn-fw">Geri Dön</a>
            }
        </div>
    </div>
</div>





