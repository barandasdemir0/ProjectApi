@model List<HotelProject.EntityLayer.Concrete.AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Role Tablosu</h4>

            <div class="table-responsive">
                <table class="table text-center align-middle">
                    <thead>
                        <tr>
                            <th class="col-1">#</th>
                            <th class="col-3">Rol Adı</th>
                            <th class="col-2">Sil</th>
                            <th class="col-2">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(++count)</td>
                                <td>@item.Name</td>

                                <td><a href="/Role/RoleDelete/@item.Id" class="btn btn-outline-danger btn-lg btn-rounded btn-fw">Sil</a></td>
                                <td><a href="/Role/RoleUpdate/@item.Id" class="btn btn-outline-warning btn-lg btn-rounded btn-fw">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>

                <br />
                <a href="/Role/RoleInsert/" class="btn btn-outline-primary  btn-lg btn-rounded btn-fw">Yeni Rol Ekle</a>
            </div>
        </div>
    </div>
</div>


